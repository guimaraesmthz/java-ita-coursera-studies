
public class Carro {

	private int potencia;
	private int velocidade;
	private int velocidadeMaxima;
	private String nome;
	
	public Carro(int potencia, String nome) {
		this.potencia = potencia;
		this.velocidade = 0;
		this.nome = nome;
	};

	void acelerar() {
		velocidade = velocidade + potencia;
	};

	void frear() {
		velocidade = velocidade / 2;
	};
	
	int getVelocidade() {
		return velocidade;
	};

}
